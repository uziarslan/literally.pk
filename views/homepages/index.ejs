<%- include('../partials/head', {title: 'Literally || Homepage'}) %>
<%- include('../partials/navbar') %>
<section class="bodySection">
  <div class="leftContent">
    <h1 class="heading">Intagram</h1>
    <div class="contentWrapper">
      <% instaPosts.map(({postUrl}) => { %>
      <blockquote class="instagram-media" data-instgrm-permalink="<%= postUrl %>" data-instgrm-version="14">
        <a href="<%= postUrl %>" target="_blank"></a>
      </blockquote>
      <% }) %>
    </div>
    <h1 style="margin: 30px 0;" class="heading">Youtube Videos</h1>
    <div class="swiper mySwiper">
      <div class="swiper-wrapper">
        <% youtubePosts.map(({postUrl, postTitle,postDescription}) => { %>
        <div class="swiper-slide">
          <div class="innerContent">
            <iframe width="100%" height="100%" src="https://www.youtube.com/embed/<%= postUrl %>" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" allowfullscreen></iframe>
            <div class="imgContent">
              <p class="mainTitle"><%= postTitle %></p>
              <p class="description"><%= postDescription %></p>
              <!-- <p class="date">5/27/15</p> -->
            </div>
          </div>
        </div>
        <% }) %>
      </div>
      <div class="swiper-pagination"></div>
    </div>
  </div>
  <div class="rightContent">
    <h1 class="heading">Blogs</h1>
    <% blogs.map(({title, description, image}) => { %>
    <div class="blogDisplayContainer">
      <img src="<%= image.path %>" />
      <div class="blogContent">
        <p class="mainTitle"><%= title %></p>
        <p class="description"><%= description %></p>
      </div>
    </div>
    <% }) %>
  </div>
</section>
<%- include('../partials/body') %>
